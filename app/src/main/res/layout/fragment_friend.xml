<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--<ProgressBar-->
        <!--android:id="@+id/progressbar"-->
        <!--style="?android:attr/progressBarStyleSmall"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:visibility="visible"/>-->
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_friend"
        android:layout_width="match_parent"
        android:layout_height="415dp"
        android:layout_marginTop="100dp"
        >

    </android.support.v4.view.ViewPager>
      <RelativeLayout
          android:id="@+id/rl_talk"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="#49a6f5"
          android:visibility="visible"
          >
          <ImageView
              android:id="@+id/iv_touxiang"
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:layout_marginTop="2dp"
              android:layout_marginLeft="15dp"
              android:src="@drawable/tou"
              />
          <TextView
              android:id="@+id/tv_talk"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="会话"
              android:textSize="40dp"
              android:layout_centerInParent="true"
              android:textColor="#fff"
              />
          <ImageView
              android:id="@+id/iv_goodfriend"
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:src="@drawable/goodfriend"
             android:layout_toRightOf="@id/tv_talk"
              android:layout_marginLeft="100dp"

              />

      </RelativeLayout>
      <RelativeLayout
        android:id="@+id/rl_friend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#49a6f5"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/iv_talk"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/talk"
            />
        <TextView
            android:id="@+id/tv_goodfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好友"
            android:textSize="40dp"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            />
        <ImageView
            android:id="@+id/iv_qun"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/qun"
            android:layout_toRightOf="@id/tv_goodfriend"
            android:layout_marginLeft="100dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_qun"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#49a6f5"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/iv_goodfriend1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/goodfriend"
            />
        <TextView
            android:id="@+id/tv_qun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群"
            android:textSize="40dp"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            />
        <ImageView
            android:id="@+id/iv_tlz"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/tlz"
            android:layout_toRightOf="@id/tv_qun"
            android:layout_marginLeft="100dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_tlz"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#49a6f5"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/iv_qun1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/qun"
            />
        <TextView
            android:id="@+id/tv_tlz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="讨论组"
            android:textSize="40dp"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            />
        <ImageView
            android:id="@+id/iv_talk1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/talk"
            android:layout_toRightOf="@id/tv_tlz"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="5dp"
            />

    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:id="@+id/ll_sreach"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:background="#fff"
            android:id="@+id/iv_search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
             android:src="@drawable/search"
            />
    </LinearLayout>

</FrameLayout>
